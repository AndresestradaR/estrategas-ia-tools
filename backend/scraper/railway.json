{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/scraper/Dockerfile"
  },
  "deploy": {
    "startCommand": "python scraper_auto.py --min-sales 20 --max-products 50",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "cronSchedule": "0 */6 * * *"
  }
}
